<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Study Lamp Settings"
            android:textSize="20sp"/>
    </androidx.appcompat.widget.Toolbar>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:text="@string/textview2"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <SeekBar
        android:id="@+id/brightnessR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:progress="50"/>

    <TextView
        android:id="@+id/brightnessRValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/brightnessRValue"
        android:gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <SeekBar
        android:id="@+id/brightnessG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:progress="50" />

    <TextView
        android:id="@+id/brightnessGValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/brightnessGValue"
        android:gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <SeekBar
        android:id="@+id/brightnessB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:progress="50"/>

    <TextView
        android:id="@+id/brightnessBvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/brightnessBvalue"
        android:gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/defaultValue"
        android:layout_width="117dp"
        android:layout_height="27dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Defalut value"
        android:textColor="@android:color/background_light" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="preview"
        android:textColor="@android:color/background_light" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>